<section class="section-staff" id="staffSection">

    <h2 data-aos="fade-up" ><%=staffDat.title%></h2>
  <% let count = 1; %>
    <div class="splide" id="staffCarousel" data-splide='{
        "type" : "loop", 
        "perMove": 1, 
        "perPage": 1, 
        "breakpoints": {
            "768": {
                "perPage":1
            },
            "576": {
                "perPage":1
            }
        }}'>

        <div class="splide__arrows" >
            <button class="splide__arrow splide__arrow--prev arrows-staff">
              <i class="fas fa-chevron-left"></i>
            </button>
            <button class="splide__arrow splide__arrow--next arrows-staff">
              <i class="fas fa-chevron-right"></i>
            </button>
          </div>

        <div class="splide__track staff-track" >
          <ul class="splide__list">
            <% for (let i = 0; i < staffs.length; i++) { %>
                <li class="splide__slide staff-slide-container">
                    <div class="splide-staff" data-aos="fade-up">
                      <div>
                        <img src="<%=staffs[i].image%>" alt="" class="img-staff" style="border-radius: 50%; width: 200px; height: 200px; object-fit: cover;">
                      </div>
                        <h4><%=staffs[i].name%></h4>
                        <h5><%=staffs[i].matricula%></h5>
                    </div>
                    <p style="text-align: center; margin: 1vh; border: .1vmin solid #00bac6; padding: 1vmin; border-radius: 1vmin; max-width: 50%"><%= staffDat[i] %></p>
                </li>
            <% } %>
          </ul>
        </div>
      </div>
</section>