<% if(sponsors.length != 0) { %>
  <section class="section-staff" id="staffSection">

    <h2 data-aos="fade-up" >Sponsors</h2>
  <% let count = 1; %>
  <div style="max-width: 1000px;margin: auto; ">
    <div class="splide" id="staffCarousel" data-splide='{
      "type" : "loop", 
      "perMove": 1, 
      "perPage": 3, 
      "breakpoints": {
          "768": {
              "perPage":2
          },
          "576": {
              "perPage":1
          }
      }}'>

      <div class="splide__arrows" >
          <button class="splide__arrow splide__arrow--prev arrows-staff" style="margin-top: -20px;">
            <i class="fas fa-chevron-left"></i>
          </button>
          <button class="splide__arrow splide__arrow--next arrows-staff" style="margin-top: -20px;">
            <i class="fas fa-chevron-right"></i>
          </button>
        </div>
      
      <div style="height: 150px; padding: 0px 0px 200px;overflow: hidden;">
        <div class="splide__track staff-track sponsor">
          <ul class="splide__list">
            <% for (let i = 0; i < sponsors.length; i++) { %>
                <li class="splide__slide staff-slide-container;">
                    <div class="splide-staff" data-aos="fade-up">
                        <img src="<%=sponsors[i].image%>" style="max-width: 150px;">
                        <h4><%=sponsors[i].name%></h4>
                    </div>
                </li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  </section>
<% } %>